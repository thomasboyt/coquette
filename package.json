{
  "name": "coquette",
  "description": "A micro framework for JavaScript games.",
  "author": "Mary Rose Cook <maryrosecook@maryrosecook.com> (http://maryrosecook.com/)",
  "version": "0.4.5",
  "main": "src/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/maryrosecook/coquette.git"
  },
  "scripts": {
    "test": "node_modules/jasmine-node/bin/jasmine-node spec/",
    "bundle": "node_modules/.bin/browserify src/main.js --standalone Coquette > coquette.js",
    "minify": "node_modules/.bin/uglifyjs coquette.js > coquette-min.js",
    "prepublish": "npm run-script bundle && npm run-script minify"
  },
  "devDependencies": {
    "browserify": "^5.12.1",
    "jasmine-node": "1.7.1",
    "uglify-js": "^2.4.15"
  }
}
